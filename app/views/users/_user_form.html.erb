<%= form_for user, url: {:controller => 'users', :action => 'create'} do |form| %>

    <div class="form-group mb-3">
        <%= form.label :name, "User Name", class: 'text-muted' %><br/><br/>
        <%= form.text_field :name, placeholder: "Enter User Name", class: "form-control border-0 shadow-sm px-4 text-primary" %>
    </div>

    <br/>

    <div class="form-group mb-3">
        <%= form.label :email, "User Email Address", class: 'text-muted' %><br/><br/>
        <%= form.text_field :email, placeholder: "Enter User Email Address", class: "form-control border-0 shadow-sm px-4 text-primary" %>
    </div>

    <br/>

    <div class="form-group mb-3">
        <%= form.label :campaigns_list, "User Campaign data", class: 'text-muted' %><br/><br/>
        <%= form.text_field :campaigns_list, placeholder: "Enter User Campaign Data", class: "form-control border-0 shadow-sm px-4 text-primary" %>
    </div>

    <br/>

    <%= form.submit "Save New User", class: "btn btn-primary btn-large input-block-level form-control text-uppercase mb-2 shadow-sm" %>
<% end %>
